@using WebAdmin.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    ViewBag.TitleAccount = "Sign in to your account";
    ViewBag.TitlePage = "Assignment_Group6";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <label for="regular2">Email</label>
    </div>
<div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <label for="password">Password</label>
    </div>

    <button type="submit" class="btn btn-info btn-raised btn-block materialRipple-light materialRipple-btn" id="btnLogin">Sign in<div class="materialRipple-md-ripple-container"></div></button>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="authentication-body-footer margin-top-5">
        <div>
            <label>
                @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox checkbox-primary" })
                <span>Remember</span>
            </label>
        </div>
        <div class="text-right">
            @*@Html.ActionLink("Forgot your password?", "ForgotPassword")*@
            @Html.ActionLink("Register as a new user", "Register")
        </div>
    </div>
   
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}