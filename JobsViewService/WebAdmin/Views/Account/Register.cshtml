@using WebAdmin.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    ViewBag.TitleAccount = "Create a new account";
    ViewBag.TitlePage = "Assignment_Group6";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
{
    @Html.AntiForgeryToken()<div class="form-group">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <label for="regular2">UserName</label>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        <label for="regular2">Email</label>
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <label for="regular2">Password</label>
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        <label for="regular2">ConfirmPassword</label>
    </div>
    <button type="submit" class="btn btn-info btn-raised btn-block materialRipple-light materialRipple-btn" id="btnLogin">Register<div class="materialRipple-md-ripple-container"></div></button>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="authentication-body-footer margin-top-5">

        <div class="text-right">
            @Html.ActionLink("Come back login", "Login")
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
